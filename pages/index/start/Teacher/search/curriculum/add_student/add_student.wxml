          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" type="number" maxlength="4" name="input_number" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

       <view class="page-section">
        <view class="page-section-title">姓名：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input"  name="input_name" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

       <view class="page-section">
        <view class="page-section-title">学院：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="input_college" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="page-section-title">专业：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="input_major" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="page-section-title">性别：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="input_sex" maxlength="1" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

      <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit">提交</button>
        <button style="margin: 30rpx 0" formType="reset">重置</button>
      </view>
    </form>
  </view>

</view>