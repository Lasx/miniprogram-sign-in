<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">

 <view class="page-section">
        <view class="page-section-title">课程号:</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" maxlength="13" name="input_course_id" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

       <view class="page-section">
        <view class="page-section-title">课程名称：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input"  name="input_course_name" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

       <view class="page-section">
        <view class="page-section-title">老师：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="input_teacher" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="page-section-title">助教：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="input_teacher_assistant" placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="page-section-title">上课时间：</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="input_time"  placeholder="请输入" />
            </view>
          </view>
        </view>
      </view>

      <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit">提交</button>
        <button style="margin: 30rpx 0" formType="reset">重置</button>
      </view>
    </form>
  </view>

</view>